@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    Welcome @context.User.FindFirst(ClaimTypes.Name).Value.Split('@')[0]
                    <NavLink class="nav-link" href="logout">
                        <span class="oi oi-account-logout"></span> Logout
                    </NavLink>
                </Authorized>
                <NotAuthorized>
                    <LogIn />
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
